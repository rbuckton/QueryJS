{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["esnext"],
        "outDir": "../../dist/lib",
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "noEmit": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true
    },
    "include": [
        "**/*.ts"
    ]
}