{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["esnext"],
        "outDir": "../../dist/lib",
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "stripInternal": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "strict": true,
        "composite": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        // "noUnusedParameters": true
    },
    "include": [
        "**/*.ts"
    ]
}