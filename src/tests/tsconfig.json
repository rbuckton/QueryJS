{
    "compilerOptions": {
        "target": "es6",
        "lib": ["esnext"],
        "module": "commonjs",
        "outDir": "../../out/tests",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "stripInternal": true,
        "declaration": true,
        "experimentalDecorators": true,
        "rootDirs": ["../es5", "../es2015", "../lib"]
    },
    "references": [
        { "path": "../sandbox/tsconfig.json" },
        { "path": "../lib/tsconfig.json" },
        { "path": "../lib/tsconfig.es5.json" },
        { "path": "../lib/tsconfig.es2015.json" },
    ],
    "include": [
        "**/*.ts"
    ]
}